{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // 控制资源管理器中的文件嵌套
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml, tiny.config.ts",
    "tsconfig.json": "",
    "next.config.*": "next-env.d.ts, tsconfig.json, postcss.config.js, tailwind.config.js"
  },
  "cSpell.words": [
    "Tauri",
    "tinypng",
    "unoptimized"
  ]
}
